---
import ThemeSwitcher from '../components/ThemeSwitcher';
import Navigation from '../components/Navigation';
import Footer from '../components/Footer';
import GoogleTagManager from '../components/GoogleTagManager.astro';

export interface Props {
	title: string;
	description?: string;
	image?: string;
	canonicalURL?: string;
}

const { 
	title,
	description = "Technical Architect and Software Engineer specializing in e-commerce solutions and AI technologies.",
	image = "/avatar.jpeg",
	canonicalURL = new URL(Astro.url.pathname, Astro.site).href
} = Astro.props;

// Add structured data
const structuredData = {
	"@context": "https://schema.org",
	"@type": "Person",
	name: "Adam Paterson",
	jobTitle: "Technical Architect",
	url: "https://www.adampaterson.co.uk",
	sameAs: [
		"https://github.com/adam-paterson",
		"https://linkedin.com/in/adam-paterson",
		"https://twitter.com/adam_paterson"
	]
};

---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link href="https://cdn.jsdelivr.net/npm/@fontsource/monaspace@1.0.0/index.css" rel="stylesheet">
		<link rel="preload" href="/fonts/your-main-font.woff2" as="font" type="font/woff2" crossorigin>
		<meta name="theme-color" content="#1a202c" media="(prefers-color-scheme: dark)">
		<meta name="theme-color" content="#f5f5f5" media="(prefers-color-scheme: light)">
		<script is:inline>
			if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
				document.documentElement.classList.add('dark');
			} else {
				document.documentElement.classList.remove('dark');
			}
		</script>
		<GoogleTagManager />
	</head>
	<body class="bg-off-white dark:bg-dark-bg text-not-quite-black dark:text-gray-100 font-body">
		<div class="fixed top-4 right-4 z-50">
			<ThemeSwitcher client:load />
		</div>
		<div class="pt-16">
			<slot />
		</div>
		<Footer />
	</body>
</html>

<style is:global>
	:root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
	}
	html {
		font-family: 'Monaspace Neon', monospace;
		font-feature-settings: "calt" 1, "dlig" 1, "ss01" 1, "ss02" 1, "ss03" 1, "ss04" 1, "ss05" 1, "ss06" 1, "ss07" 1, "ss08" 1;
		-webkit-font-feature-settings: "calt" 1, "dlig" 1, "ss01" 1, "ss02" 1, "ss03" 1, "ss04" 1, "ss05" 1, "ss06" 1, "ss07" 1, "ss08" 1;
	}
	h1, h2, h3, h4, h5, h6 {
		font-family: 'Monaspace Xenon', monospace;
		font-feature-settings: "calt" 1, "dlig" 1, "ss01" 1, "ss02" 1, "ss03" 1, "ss04" 1, "ss05" 1, "ss06" 1, "ss07" 1, "ss08" 1;
		-webkit-font-feature-settings: "calt" 1, "dlig" 1, "ss01" 1, "ss02" 1, "ss03" 1, "ss04" 1, "ss05" 1, "ss06" 1, "ss07" 1, "ss08" 1;
	}
	code {
		font-family: 'Monaspace Argon', monospace;
		font-feature-settings: "calt" 1, "dlig" 1, "ss01" 1, "ss02" 1, "ss03" 1, "ss04" 1, "ss05" 1, "ss06" 1, "ss07" 1, "ss08" 1;
		-webkit-font-feature-settings: "calt" 1, "dlig" 1, "ss01" 1, "ss02" 1, "ss03" 1, "ss04" 1, "ss05" 1, "ss06" 1, "ss07" 1, "ss08" 1;
	}
</style>
