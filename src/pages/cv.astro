---
import WideLayout from '../layouts/WideLayout.astro';
import { siMagento } from 'simple-icons';

const icons = {
    magento: siMagento.path,
    akeneo: 'M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm-5-5h10v10H7zm3 0h4v4H10z',
};
---

<WideLayout title="CV | Adam Paterson">
    <div class="py-16">
        <!-- Header Section -->
        <header class="mb-16 grid grid-cols-[3fr,1fr] gap-12">
            <div>
                <h1 class="text-5xl font-bold mb-6">Hello. I'm Adam Paterson,<br/>
                    I Love What I Do<br/>
                    Because I'm Passionate<br/>
                    About It.</h1>
                <p class="text-gray-600 dark:text-gray-400 mt-8 text-lg max-w-3xl">
                    Fullstack Software Engineer with over 14 years of experience specializing in eCommerce development.
                    Proven track record in building scalable web applications and leading technical teams.
                </p>
            </div>
            <div class="text-right">
                <div class="inline-block">
                    <div class="bg-black text-white p-2 inline-block mb-2">B</div>
                    <p class="text-sm">Portfolio</p>
                    <p class="text-sm">adampaterson.co.uk</p>
                </div>
            </div>
        </header>

        <!-- Two Column Layout with more spacing -->
        <div class="grid grid-cols-[1fr,3fr] gap-16">
            <!-- Left Column -->
            <div class="space-y-12">
                <section class="contact">
                    <h2 class="font-bold text-xl mb-4">CONTACT</h2>
                    <div class="space-y-2 text-gray-600 dark:text-gray-400">
                        <p>29 Hilton Close</p>
                        <p>Sawley, Nottingham</p>
                        <p>Phone: +44 759 594 4315</p>
                        <p>Email: hello@adampaterson.co.uk</p>
                        <p>Web: adampaterson.co.uk</p>
                    </div>
                </section>

                <section class="skills">
                    <h2 class="font-bold text-xl mb-4">EXPERTISE</h2>
                    <div class="space-y-2 text-gray-600 dark:text-gray-400">
                        <p>Magento 2 Development</p>
                        <p>Technical Architecture</p>
                        <p>eCommerce Solutions</p>
                        <p>Team Leadership</p>
                        <p>PHP / JavaScript</p>
                        <p>Solution Design</p>
                        <p>Technical Mentoring</p>
                    </div>
                </section>

                <section class="certifications">
                    <h2 class="font-bold text-xl mb-4">CERTIFICATIONS</h2>
                    
                    <!-- Adobe Certifications -->
                    <div class="mb-8">
                        <h3 class="text-lg font-medium mb-3 text-gray-700 dark:text-gray-300">Adobe</h3>
                        <div class="space-y-4 text-gray-600 dark:text-gray-400">
                            <div class="flex items-start gap-3">
                                <svg role="img" viewBox="0 0 24 24" class="w-6 h-6 fill-current">
                                    <path d={icons.magento}/>
                                </svg>
                                <div>
                                    <p class="font-medium">Adobe Certified Professional - Adobe Commerce Developer</p>
                                    <p class="text-sm">Issued Mar 2023</p>
                                </div>
                            </div>
                            <div class="flex items-start gap-3">
                                <svg role="img" viewBox="0 0 24 24" class="w-6 h-6 fill-current">
                                    <path d={icons.magento}/>
                                </svg>
                                <div>
                                    <p class="font-medium">Adobe Certified Expert - Adobe Commerce Cloud Developer</p>
                                    <p class="text-sm">Issued Mar 2023</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Akeneo Certifications -->
                    <div>
                        <h3 class="text-lg font-medium mb-3 text-gray-700 dark:text-gray-300">Akeneo</h3>
                        <div class="space-y-4 text-gray-600 dark:text-gray-400">
                            <div class="flex items-start gap-3">
                                <svg role="img" viewBox="0 0 24 24" class="w-6 h-6 fill-current">
                                    <path d={icons.akeneo}/>
                                </svg>
                                <div>
                                    <p class="font-medium">Akeneo Product Experience Advisor Certification</p>
                                    <p class="text-sm">Issued Aug 2024 · Expires Feb 2026</p>
                                    <p class="text-xs text-gray-500">Credential ID mqgpzegqk6zx</p>
                                </div>
                            </div>
                            <div class="flex items-start gap-3">
                                <svg role="img" viewBox="0 0 24 24" class="w-6 h-6 fill-current">
                                    <path d={icons.akeneo}/>
                                </svg>
                                <div>
                                    <p class="font-medium">Business Implementation Fundamentals Certification</p>
                                    <p class="text-sm">Issued Aug 2024 · Expires Feb 2026</p>
                                    <p class="text-xs text-gray-500">Credential ID vqjnicfmobxp</p>
                                </div>
                            </div>
                            <div class="flex items-start gap-3">
                                <svg role="img" viewBox="0 0 24 24" class="w-6 h-6 fill-current">
                                    <path d={icons.akeneo}/>
                                </svg>
                                <div>
                                    <p class="font-medium">Technical Integration Fundamentals Certification</p>
                                    <p class="text-sm">Issued Aug 2024 · Expires Feb 2026</p>
                                    <p class="text-xs text-gray-500">Credential ID wahnnnuws2vq</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>

            <!-- Right Column -->
            <div>
                <section class="work-experience">
                    <h2 class="font-bold text-xl mb-6">WORK EXPERIENCE</h2>
                    <div class="space-y-8">
                        <div class="relative pl-8 border-l border-gray-200 dark:border-gray-700">
                            <div class="absolute w-3 h-3 bg-gray-200 rounded-full -left-[6.5px] top-2"></div>
                            <span class="text-sm text-gray-500">Apr 2023 - PRESENT</span>
                            <h3 class="font-medium mt-2">Technical Solutions Architect, Principal Engineer</h3>
                            <p class="text-gray-600 mb-2">IDHL · Full-time</p>
                            <ul class="list-disc list-inside text-gray-600 space-y-2">
                                <li>Technical leadership and architecture</li>
                                <li>Adobe Commerce development</li>
                                <li>Team mentoring and growth</li>
                            </ul>
                        </div>

                        <div class="relative pl-8 border-l border-gray-200 dark:border-gray-700">
                            <div class="absolute w-3 h-3 bg-gray-200 rounded-full -left-[6.5px] top-2"></div>
                            <span class="text-sm text-gray-500">Oct 2021 - Apr 2023</span>
                            <h3 class="font-medium mt-2">Senior Software Engineer</h3>
                            <p class="text-gray-600 mb-2">Space 48 · Full-time</p>
                            <ul class="list-disc list-inside text-gray-600 space-y-2">
                                <li>Adobe Commerce development</li>
                                <li>Technical architecture and solution design</li>
                                <li>Performance optimization</li>
                            </ul>
                        </div>

                        <div class="relative pl-8 border-l border-gray-200 dark:border-gray-700">
                            <div class="absolute w-3 h-3 bg-gray-200 rounded-full -left-[6.5px] top-2"></div>
                            <span class="text-sm text-gray-500">Jan 2020 - Oct 2021</span>
                            <h3 class="font-medium mt-2">Senior Software Engineer</h3>
                            <p class="text-gray-600 mb-2">JH · Full-time</p>
                            <ul class="list-disc list-inside text-gray-600 space-y-2">
                                <li>Adobe Commerce development</li>
                                <li>Technical leadership</li>
                                <li>Solution architecture</li>
                            </ul>
                        </div>

                        <div class="relative pl-8 border-l border-gray-200 dark:border-gray-700">
                            <div class="absolute w-3 h-3 bg-gray-200 rounded-full -left-[6.5px] top-2"></div>
                            <span class="text-sm text-gray-500">Apr 2019 - Jan 2020</span>
                            <h3 class="font-medium mt-2">Software Engineer</h3>
                            <p class="text-gray-600 mb-2">JH · Full-time</p>
                            <ul class="list-disc list-inside text-gray-600 space-y-2">
                                <li>Adobe Commerce development</li>
                                <li>Custom module development</li>
                            </ul>
                        </div>

                        <div class="relative pl-8 border-l border-gray-200 dark:border-gray-700">
                            <div class="absolute w-3 h-3 bg-gray-200 rounded-full -left-[6.5px] top-2"></div>
                            <span class="text-sm text-gray-500">Sep 2015 - Apr 2019</span>
                            <h3 class="font-medium mt-2">Web Developer</h3>
                            <p class="text-gray-600 mb-2">Creare · Full-time</p>
                            <ul class="list-disc list-inside text-gray-600 space-y-2">
                                <li>Full-stack web development</li>
                                <li>eCommerce solutions</li>
                                <li>Client consultation</li>
                            </ul>
                        </div>
                    </div>
                </section>

                <section class="mt-12">
                    <h2 class="font-bold text-xl mb-6">RECOMMENDATIONS</h2>
                    <div class="space-y-6">
                        <div class="bg-gray-50 dark:bg-gray-800 p-4 rounded">
                            <p class="italic text-gray-600 dark:text-gray-400 mb-2">
                                "Adam is an exceptional developer with deep knowledge of Magento 2..."
                            </p>
                            <p class="text-sm">- Andrew Rushbury, Technical Lead</p>
                        </div>
                        <div class="bg-gray-50 dark:bg-gray-800 p-4 rounded">
                            <p class="italic text-gray-600 dark:text-gray-400 mb-2">
                                "Working with Adam has been a great experience..."
                            </p>
                            <p class="text-sm">- Lei Tang, Senior Developer</p>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</WideLayout>