---
import Layout from '../layouts/Layout.astro';
import NebulaEffect from '../components/NebulaEffect';
import OrbitalAccent from '../components/OrbitalAccent';
import AnimatedSection from '../components/AnimatedSection';
import Stars from '../components/Stars';

const pageTitle = "About Me - Adam Paterson";
const pageDescription = "Learn more about Adam Paterson - Technical Solution Engineer, AI enthusiast, and lifelong learner.";

const interests = [
  {
    title: "Technology & AI",
    description: "Exploring the frontiers of artificial intelligence and its applications in business. Currently fascinated by LLMs and their potential to transform how we work.",
    icon: "ðŸ¤–"
  },
  {
    title: "Photography",
    description: "Amateur photographer with a passion for capturing urban landscapes and night photography. The city lights tell their own stories.",
    icon: "ðŸ“¸"
  },
  {
    title: "Gaming",
    description: "From strategy games to immersive RPGs, gaming has always been a way to unwind and explore new worlds.",
    icon: "ðŸŽ®"
  },
  {
    title: "Reading",
    description: "Avid reader of science fiction, technology trends, and business innovation. Currently exploring the intersection of AI and society.",
    icon: "ðŸ“š"
  }
];

const funFacts = [
  "Built my first website at age 12",
  "Have a collection of vintage programming books",
  "Once debugged code at 3 AM while sleepwalking",
  "Can explain complex tech concepts using only space analogies"
];

const values = [
  {
    title: "Continuous Learning",
    description: "The tech universe is ever-expanding, and I'm always eager to explore new frontiers."
  },
  {
    title: "Problem Solving",
    description: "Like navigating through an asteroid field, I enjoy finding creative solutions to complex challenges."
  },
  {
    title: "Innovation",
    description: "Pushing boundaries and exploring new possibilities, just like a pioneer in space."
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <main class="relative min-h-screen">
    <Stars client:load className="fixed inset-0" />
    <NebulaEffect client:load />
    
    {/* Hero Section */}
    <section class="relative min-h-[70vh] flex items-center justify-center">
      <div class="absolute inset-0 bg-gradient-to-b from-transparent via-transparent to-background/50 z-10"></div>
      <AnimatedSection client:load className="relative z-20 max-w-4xl mx-auto px-4 text-center">
        <h1 class="text-5xl md:text-6xl font-bold mb-6 text-neutral-200">Mission Log</h1>
        <p class="text-xl md:text-2xl text-neutral-400 max-w-2xl mx-auto leading-relaxed">
          Technical Solution Engineer exploring the frontiers of AI and digital commerce
        </p>
      </AnimatedSection>
    </section>

    {/* Main Content */}
    <div class="relative z-20">
      {/* Personal Introduction */}
      <section class="py-32">
        <AnimatedSection client:load className="max-w-4xl mx-auto px-4">
          <div class="relative mb-16">
            <OrbitalAccent client:load />
            <h2 class="text-3xl font-bold text-neutral-200">Personal Profile</h2>
          </div>
          <div class="grid md:grid-cols-2 gap-12 items-center">
            <div class="space-y-6">
              <p class="text-lg text-neutral-400 leading-relaxed">
                Greetings, fellow explorer! I'm Adam Paterson, navigating the vast universe of digital commerce and AI technology.
              </p>
              <p class="text-lg text-neutral-400 leading-relaxed">
                Like a space navigator charting new territories, I've spent the last 15 years exploring the frontiers of technology, helping businesses reach new heights in their digital journey.
              </p>
            </div>
            <div class="grid grid-cols-2 gap-4">
              <div class="stat-card">
                <div class="text-3xl font-bold text-neutral-200">15+</div>
                <div class="text-sm text-neutral-400">Years Experience</div>
              </div>
              <div class="stat-card">
                <div class="text-3xl font-bold text-neutral-200">100+</div>
                <div class="text-sm text-neutral-400">Projects Delivered</div>
              </div>
              <div class="stat-card">
                <div class="text-3xl font-bold text-neutral-200">6+</div>
                <div class="text-sm text-neutral-400">E-commerce Platforms</div>
              </div>
              <div class="stat-card">
                <div class="text-3xl font-bold text-neutral-200">20+</div>
                <div class="text-sm text-neutral-400">Industries Served</div>
              </div>
            </div>
          </div>
        </AnimatedSection>
      </section>

      {/* Interests & Values */}
      <section class="py-32">
        <AnimatedSection client:load className="max-w-4xl mx-auto px-4">
          <div class="relative mb-16">
            <OrbitalAccent client:load />
            <h2 class="text-3xl font-bold text-neutral-200">Interests & Core Values</h2>
          </div>

          {/* Interests */}
          <div class="mb-16">
            <h3 class="text-xl font-bold mb-8 text-neutral-400">Interests</h3>
            <div class="grid md:grid-cols-2 gap-6">
              {interests.map(interest => (
                <div class="interest-card group relative overflow-hidden">
                  <div class="flex items-start gap-6">
                    <div class="interest-icon-wrapper">
                      <span class="text-3xl group-hover:scale-110 transition-all duration-300 inline-block">
                        {interest.icon}
                      </span>
                    </div>
                    <div>
                      <h4 class="text-lg font-medium text-neutral-200 mb-2">{interest.title}</h4>
                      <p class="text-sm text-neutral-400 leading-relaxed">{interest.description}</p>
                    </div>
                  </div>
                  <div class="absolute inset-0 bg-gradient-to-r from-white/[0.03] to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300" />
                </div>
              ))}
            </div>
          </div>

          {/* Core Values */}
          <div>
            <h3 class="text-xl font-bold mb-8 text-neutral-400">Core Values</h3>
            <div class="grid md:grid-cols-3 gap-6">
              {values.map(value => (
                <div class="value-card group relative overflow-hidden">
                  <div class="relative z-10">
                    <h4 class="text-lg font-medium text-neutral-200 mb-3">{value.title}</h4>
                    <p class="text-sm text-neutral-400 leading-relaxed">{value.description}</p>
                  </div>
                  <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-br from-white/[0.02] to-transparent rounded-full -translate-y-16 translate-x-16 group-hover:translate-y-[-4rem] group-hover:translate-x-20 transition-transform duration-500" />
                </div>
              ))}
            </div>
          </div>
        </AnimatedSection>
      </section>

      {/* Fun Facts */}
      <section class="py-32">
        <AnimatedSection client:load className="max-w-4xl mx-auto px-4">
          <div class="relative mb-16">
            <OrbitalAccent client:load />
            <h2 class="text-3xl font-bold text-neutral-200">Space Debris</h2>
            <p class="text-neutral-400 mt-4">Random facts from my journey through the digital cosmos</p>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {funFacts.map(fact => (
              <div class="fun-fact-card group">
                <div class="flex items-center gap-4">
                  <span class="text-xl group-hover:rotate-[20deg] transition-transform duration-300 shrink-0">ðŸŒŸ</span>
                  <span class="text-sm text-neutral-400 leading-relaxed">{fact}</span>
                </div>
              </div>
            ))}
          </div>
        </AnimatedSection>
      </section>
    </div>
  </main>
</Layout>

<style>
  .interest-card {
    @apply p-6 bg-white/[0.02] rounded-lg backdrop-blur-sm 
           border border-white/5 hover:border-white/10 
           transition-all duration-300;
  }

  .interest-icon-wrapper {
    @apply w-12 h-12 flex items-center justify-center 
           rounded-lg bg-white/[0.03] backdrop-blur-sm;
  }

  .value-card {
    @apply p-6 bg-white/[0.02] rounded-lg backdrop-blur-sm 
           border border-white/5 hover:border-white/10 
           transition-all duration-300 relative overflow-hidden;
  }

  .fun-fact-card {
    @apply p-4 bg-white/[0.02] rounded-lg backdrop-blur-sm 
           border border-white/5 hover:border-white/10 
           transition-all duration-300;
  }

  .stat-card {
    @apply bg-white/[0.02] rounded-lg p-6 text-center backdrop-blur-sm 
           border border-white/5 hover:border-white/10 
           transition-colors duration-300;
  }
</style>
