---
import Layout from '../layouts/Layout.astro';
import AnimatedRoles from '../components/AnimatedRoles';

const roles = [
  "Software Engineer",
  "AI Enthusiast",
  "Problem Solver",
  "Lifelong Learner",
  "Father",
  "Teacher"
];
---

<Layout title="Base">
  <main class="min-h-screen flex flex-col items-center justify-center p-4 text-center">
    <h1 class="text-6xl md:text-8xl lg:text-9xl font-bold text-gray-900 dark:text-white mb-4">
      Hello, I'm Adam
    </h1>
    <p class="text-2xl md:text-3xl lg:text-4xl text-gray-700 dark:text-gray-300">
      I'm a <AnimatedRoles client:load roles={roles} typingSpeed={150} pauseDuration={8000} />
    </p>
  </main>
</Layout>

<style>
  .animated-role {
    @apply inline-block min-w-[200px];
  }
  .cursor {
    @apply animate-blink;
  }
  @keyframes blink {
    0%, 100% { opacity: 0; }
    50% { opacity: 1; }
  }
</style>
